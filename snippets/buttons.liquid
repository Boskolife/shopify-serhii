{% stylesheet %}

  .btn {
    display: inline-block;
    padding: 16px 32px;
    border-radius: 8px;
    font-size: 16px;
    line-height: 1.5
  }

  .btn_black {
    background-color: #111;
    color: #fff;
    transition: all 0.3s ease
  }

  .btn_black:hover {
    background-color: #737373;
    transition: all 0.3s ease
  }

  .btn_white {
    background-color: #fff;
    color: #111;
    transition: all 0.3s ease
  }

  .btn_white:hover {
    background-color: #cacacb;
    transition: all 0.3s ease
  }

{% endstylesheet %}